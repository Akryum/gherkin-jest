{
  "transform": {
    "^.+\\.(ts|tsx)$": "ts-jest/preprocessor",
    "^.+\\.feature$": "<rootDir>/../../dist/lib",
    "^.+\\.pegjs$": "<rootDir>/../../dist/test/peg-transform"
  },
  "moduleNameMapper" :{
    "^gherkin-jest$": "<rootDir>/../../dist/lib"
  },
  "rootDir": "src/test",
  "testMatch": ["**/*.test.ts", "**/*.feature"],
  "moduleFileExtensions": ["js", "jsx", "ts", "tsx", "feature", "pegjs"],
  "setupFiles": ["<rootDir>/../../dist/test/support"]
}
